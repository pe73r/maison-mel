<!-- /sections/custom-html.liquid -->

<section class="custom-html section bg--section section--custom-html m0 py4">
  {% if section.settings.title != '' %}
  <h2 class="t--section-title text-align--center f--main font-size--l lg--font-size--xl m0 mb3">{{ section.settings.title | escape }}</h2>
  {% endif %}
  <div class="wrapper section--wrapper wrapper--html">
    {{ section.settings.html }}

  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "settings": [
    {
     "type":      "text",
     "id":        "title",
     "label":     "Heading"
    },
    {
      "id": "html",
      "type": "html",
      "label": "HTML",
      "default": "<p>Your custom HTML.</p>"
    }
  ],
  "presets": [
    {
      "name": "Custom HTML",
      "category": "Advanced"
    }
  ]
}
{% endschema %}