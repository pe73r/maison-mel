
<section id="section-{{ section.id }}" class="image-block"  data-section-type="image-block" data-section-id="{{ section.id }}">
  <div class="container-presse">
    {% if section.settings.title != blank %}
      <h2 class="f--title font-size--xxxl lg--font-size--xxxxl">{{ section.settings.title }}</h2>
    {% endif %}
    {% for block in section.blocks %}
      <div id="block-{{ block.id }}">
         <div class="Presse-block">
           <div class="grid
                       {% if block.settings.reverse %} grid--rev {% endif %}
                       {% if block.settings.grid-align == "center" %} grid--middle {% elsif block.settings.grid-align == "bottom" %} grid--bottom {% else %}{% endif %}
                       {% if block.settings.gutter == "large" %} grid--large {% else %} {% endif %}">

              <div class="{% if block.settings.grid == "2/3" %} 2/3--lap-and-up {% else %} 1/2--lap-and-up {% endif %} grid__cell">
                {% if block.settings.image != blank  %}
                  <div class="image-block_image">
                     <img src="{{  block.settings.image | img_url:'master' }}" alt="{{ block.settings.image.alt }}">
                  </div> 
                {% endif %}
              </div>
              <div class="{% if block.settings.grid == "2/3" %} 1/3--lap-and-up {% else %} 1/2--lap-and-up {% endif %} grid__cell">
                <div class="image-block__content relative">

                  <div class="Presse__logos_flex">
                    {% if block.settings.logo-1 != blank %}
                      <img src="{{ block.settings.logo-1 }}" alt="{{ block.settings.logo-1.alt }}">
                    {% endif %}
                    {% if block.settings.logo-2 != blank %}
                      <img src="{{ block.settings.logo-2 }}" alt="{{ block.settings.logo-2.alt }}">
                    {% endif %}
                  </div>

                  {% if block.settings.title != blank  %}
                    <h3 class="f--title font-size--xxl lg--font-size--xxl">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.date != blank %}
                    <div class="image-block_date">{{ block.settings.date }}</div>
                  {% endif %}

                  {% if block.settings.content != blank %}
                   <div class="image-block_content font-size--xxl lg--font-size--xxl">{{ block.settings.content }}</div>
                  {% endif %}

                  {% if block.settings.button != blank %}
                    <a href="{{ block.settings.url }}" class="btn bg--primary btn--presse">
                       {{ block.settings.button }}
                    </a>
                  {% endif %}
                </div>
             </div>
            </div>
           </div>
       </div>
      {% endfor %}
  </div>
</section>
<style>
{% for block in section.blocks %}
   #block-{{ block.id }} .Presse-block{
      padding-top: {{ block.settings.padding}}px;
    }
 {% endfor %}
</style>
{% schema %}
{
  "name": "Page presse",
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section title",
        "default": "Revues de presse"
      }

  ],
  "blocks": [
    {
      "type": "presse",
      "name": "Presse",
      "settings": [

           {
            "type": "select",
            "id": "grid-align",
            "options": [
             { "value": "top", "label": "top"},
             { "value": "center", "label": "center"},
             { "value": "bottom", "label": "bottom"}
            ],
            "label": "Grid align",
            "default": "top"
          },
          {
           "type": "select",
           "id": "grid",
           "options": [
            { "value": "1/2", "label": "1/2"},
            { "value": "2/3", "label": "2/3"}
           ],
           "label": "Grid size",
           "default": "1/2"
         },
           {
            "type": "select",
            "id": "gutter",
            "options": [
             { "value": "large", "label": "large"},
             { "value": "default", "label": "default"}
            ],
            "label": "Grid gutter",
            "default": "default"
          },
          {
             "type":      "range",
             "id":        "padding",
             "min":       0,
             "max":       100,
             "step":      1,
             "label":     "Block padding top",
             "default":   10
          },
          {
            "type": "checkbox",
            "id": "reverse",
            "label": "Reverse block image",
            "default": false
          },
          {
            "type": "header",
            "content": "Image side"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "header",
            "content": "Text side"
          },
          {
            "type": "text",
            "id": "logo-1",
            "label": "Logo Beendi",
            "default": "https://cdn.shopify.com/s/files/1/0359/9178/1421/files/logo-beendi.svg?v=1593550789",
            "info": "Logo SVG"
          },
          {
            "type": "text",
            "id": "logo-2",
            "label": "Logo Beedeli",
            "default": "https://cdn.shopify.com/s/files/1/0359/9178/1421/files/logo-beedeli.svg?v=1593550565",
            "info": "Logo SVG"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "textarea",
            "id": "date",
            "label": "Date",
            "default": "Juin 2020"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content",
            "default": "teasing"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "button",
            "label": "Button text",
            "default": "lire l'article"
          }
      ]
    }
  ]
}
{% endschema %}
