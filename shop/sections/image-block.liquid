{% include 'image-text-block' %}
{% schema %}
{
  "name": "Image block",
  "settings": [

  ],
  "blocks": [
    {
      "type": "image-text",
      "name": "Image text",
      "settings": [
          {
             "type":      "range",
             "id":        "padding",
             "min":       0,
             "max":        50,
             "step":       1,
             "label":     "Block padding top",
             "default":   10
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "label"
          },
          {
            "type": "checkbox",
            "id": "reverse",
            "label": "Reverse block image",
            "default": false
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "info": "info",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>"
          },
          {
            "type": "text",
            "id": "button",
            "label": "Button",
            "default": "Button"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          }
      ]
    }
  ]
}
{% endschema %}
