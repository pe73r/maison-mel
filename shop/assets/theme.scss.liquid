/*============================================================================
  #Disclosure
==============================================================================*/

$max-height-disclosure: 300px;
$min-height-disclosure: 92px;

.disclosure {
  position: relative;
}

.disclosure__toggle {
  border-bottom: $borderHrHeight solid currentColor;
  color: inherit;
  width: auto;
  white-space: nowrap;
  white-space: normal;
  max-width: 25em;
  text-align: right;
  padding: 0 0 0.5em 0;
  text-indent: 1px;
}

.disclosure-list {
  color: inherit;
  border-width: $borderHrHeight;
  border-style: solid;
  border-color: currentColor;
  width: auto;
  min-width: 100%;
  margin: 0;
  bottom: 115%;
  padding: 1em 0 calc(1em - 1px);
  position: absolute;
  display: none;
  min-height: $min-height-disclosure;
  max-height: $max-height-disclosure;
  overflow-y: auto;
  border-radius: 0;
}

.disclosure-list--left {
  left: 0;
}

.disclosure-list--right {
  right: 0;
}

.disclosure__toggle {
  display: table;
}

.disclosure__toggle span {
  display: table-cell;
  vertical-align: middle;
}

.disclosure__toggle[aria-expanded="false"] .disclosure__toggle-icon--close {
  display: none;
}


.disclosure__toggle[aria-expanded="true"] .disclosure__toggle-icon--open {
  display: none;
}

.disclosure-list--visible {
  display: block;
}

.disclosure-list__item {
  white-space: nowrap;
  text-align: left;
  margin-bottom: 0;
  display: table;

  .disclosure-list__current-indicator, .disclosure-list__option {
    display: table-cell;
    vertical-align: middle;
  }

  .disclosure-list__current-indicator {
    visibility: hidden;
  }

  &:focus,
  &:hover {
    .disclosure-list__current-indicator {
      visibility: visible;
    }
  }
}

.disclosure-list__item--current {
  .disclosure-list__current-indicator {
    visibility: visible;
  }
}

